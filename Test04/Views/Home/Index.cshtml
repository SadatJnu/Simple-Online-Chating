<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-app="chat_app">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" ng-controller="ChatController">
        <h3 class="page-header">My Chat Application</h3>
        <table class="table table-responsive table-bordered">
            <tr class="row">
                <td>User Name:</td>
                <td><input type="text" id="userName" ng-model="name" /></td>
            </tr>
            <tr class="row">
                <td>Message :</td>
                <td><input type="text" id="message" ng-model="message" /></td>
            </tr>
            <tr class="row">
                <td></td>
                <td><button type="button" id="btnSend" class="btn btn-primary glyphicon glyphicon-send" ng-click="newMessage()">&nbsp;Send</button></td>
            </tr>

            <tr class="row" style="margin-top:50px;">
                <td>User Messages</td>
                <td>
                    <ul>
                        <li ng-repeat="chat in allMessages">
                            <span>{{chat}}</span>
                        </li>
                    </ul>
                </td>
            </tr>
        </table>
    </div>
</div>